<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="header">Add Student</h1>
  </div>
</div>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr id="form-row">
        <td colspan="12">
          <br>
          <form class="employeeEntry-form">
            <div class="form-group">
              <label for="employee-id">Student ID:</label>
              <input type="text" id="employee-id" name="employee-id">
            </div>
            <div class="form-group">
              <label for="auth">Name:</label>
              <input type="text" id="name" name="name">
            </div>
            <div class="form-group">
              <label for="email">Email:</label>
              <input type="text" id="email" name="email">
            </div>
            <div class="form-group">
              <label for="deptSelect">Position:</label>
              <select class="custom-select" id="deptSelect" name="dept">
                <option value="Undergrad">Undergraduate Assistant</option>
                <option value="Grad">Graduate Assistant</option>
              </select>
            </div>
            <div class="form-group">
              <label for="category">Supervisor:</label>
              <select placeholder="Enter the Category" class="custom-select" id="inputGroupSupervisor">        
              </select>
            </div>
            <div class="form-group">
              <label for="statusSelect">Status:</label>
              <select class="custom-select" id="statusSelect" name="status">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
            </div>
            <div style="display: flex; justify-content: center; align-items: center;">
              <button type="submit" class="btn btn-success" id="employeeSubmit">Add Entry</button>
            </div>
        </td>  
      </tr>
</div>       
<div class="container">
      <tr>
        <th>Student ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Position</th>
        <th>Supervisor</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<!-- Custom Script -->
<script src="assets/js/admin_student.js" type="text/javascript"></script>

<script type="text/javascript">
  function facultyDropdown() {
    console.log("Requesting Faculty Dropdown");
    var facultyInput = $("#inputGroupSupervisor");
    // For loop that gets all students and dynamically creates list in the html for the respective projects.
      $.get("/api/drop/faculty", function (data) {
          for (var i = 0; i < data.length; i++) {
                  let dropdown = $("<option>").attr("value", data[i].faculty_id).text(data[i].facultyName);
                  facultyInput.append(dropdown);
          }
      })
  };

  facultyDropdown()
</script>