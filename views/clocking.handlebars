    <h2 class="subheader" id="time-log" style="font-size: large;"></h2>
    <h2 class="hidden" id="hidden-studentName">{{this.cntUser}}</h2>
    <h2 class="hidden" id="hidden-student-id">{{this.student_id}}</h2>
    {{#unless this.cntUser}}
    {{> capacity}}
    {{/unless}}
</div>
