<div class="jumbotron jumbotron-fluid">
  <class class="container">
    <h1 class="header" id="pageType">Time Summary</h1>
    <h2 class="subheader" id="category">{{this.category}}</h2>
    <h2 class="subheader" id="time-log" style="font-size: large;"></h2>
    <h2 class="hidden" id="isUpdate">{{this.update}}</h2>
    {{#if this.logId}}
    <h2 class="subheader" id="logId">Record# {{this.logId}}</h2>
    <h2 class="hidden" id="hidden-logId">{{this.logId}}</h2>
    {{/if}}
</div>
<div class="table-container">
  <table class="table table-striped">
    <thead>
      <tr id="form-row">
        <td colspan="12">
          <br>
          <form class="index-form">
            <label for="category">Category:</label>
            <select placeholder="Enter the Category" class="custom-select" id="inputGroupCategory">
                <option value="Daily Log">Daily Log</option>
                <option value="Weekly Goal">Weekly Goal</option>
                <option value="Meeting Minutes">Meeting Minutes</option>          
            </select>

            <div style="display: flex; justify-content: center; align-tiems: center;">
              <button type="submit" class="btn btn-success" id="Search">Search</button>
            </div>
        </td>
      </tr>
      <tr>
        <th>Log#</th>
        <th>Name</th>
        <th>Date</th>
        <th>Project</th>
        <th>Category</th>
        <th>Notes</th>
        {{#if this.category.length}}
        {{!-- <th>Duplicate</th> --}}
        <th>Update</th>
        <th>Delete</th>
        {{/if}}
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

{{#if this.update}}
<script src="assets/js/update_category.js" type="text/javascript"></script>
{{else if this.studentName.length}}
<!-- Custom Script -->
<script src="assets/js/user.js" type="text/javascript"></script>
{{else}}
<!-- Custom Script -->
<script src="assets/js/category.js" type="text/javascript"></script>
{{/if}}