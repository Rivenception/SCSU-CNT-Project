<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="header">Add Employee</h1>
    <h2 class="subheader" id="dept">{{this.dept}}</h2>
    <h2 class="subheader" id="employeeName">{{this.employeeName}}</h2>
    <h2 class="hidden" id="hidden-employeeId">{{this.user}}</h2>
  </div>
</div>
<div class="table-container">
  <table class="table table-striped">
    <thead>
      <tr id="form-row">
        <td colspan="12">
          <br>
          <form class="employeeEntry-form">
            <div class="form-group">
              <label for="employee-id">Employee ID:</label>
              <input type="text" id="employee-id" name="employee-id">
            </div>
            <div class="form-group"></div>
            <label for="auth">Name:</label>
            <input type="text" id="name" name="name">
            <div class="form-group">
              <label for="deptSelect">Department:</label>
              <select class="custom-select" id="deptSelect" name="dept">
                <option value="Engineering">Engineering</option>
                <option value="Manufacturing">Manufacturing</option>
                <option value="Program Management">Program Management</option>
                <option value="Certification">Certification</option>
              </select>
            </div>
            <div class="form-group">
              <label for="title">Title:</label>
              <input type="text" id="title" name="title">
            </div>
            <div class="form-group">
              <label for="salary">Salary:</label>
              <input type="text" id="salary" name="salary">
            </div>
            <div class="form-group">
              <label for="statusSelect">Status:</label>
              <select class="custom-select" id="statusSelect" name="status">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
            </div>
            <div style="display: flex; justify-content: center; align-tiems: center;">
              <button type="submit" class="btn btn-success" id="employeeSubmit">Add Entry</button>
            </div>
        </td>
      </tr>
      <tr>
        <th>Employee ID</th>
        <th>Name</th>
        <th>Department</th>
        <th>Title</th>
        <th>Salary</th>
        <th>Status</th>
        <th>Update</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
<footer class="footer mt-auto py-3">
  <div class="container">
    {{> api-data}}
</footer>
<!-- Custom Script -->
<script src="assets/js/admin.js" type="text/javascript"></script>