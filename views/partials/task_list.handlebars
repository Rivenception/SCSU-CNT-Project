{{!-- {{#if hasprojectName}} --}}
<tr id="form-row">
    <td colspan="12">
        <br>
        <div class="form-group">
            <label for="category">Priority:</label>
                <select placeholder="Enter the Priority" class="custom-select" id="inputGroupPriority">
                    <option value="High">High</option>
                    <option value="Normal">Normal</option>
                    <option value="Low">Low</option>
                    <option value="Recurring">Recurring</option>             
                </select>
        </div>
        <br>
        <div class="form-group">
            <label for="auth">Date:</label>
                <input placeholder="Enter the date" id="date" value="" type="date" />
        </div>
        <div class="form-group">
            <label for="task">Project:</label>
            <p style="font-size: x-small;">*Required field: Please use Admin as a catch-all for non-project items</p>
                <select class="custom-select" id="inputGroupProject">
                </select>
        </div>    
        <div class="form-group">
            <label for="notes">Task:</label>
                <input placeholder="Enter Task" id="inputGroupTask" type="text" style="width: -webkit-fill-available; height: 100px;" />
        </div>
        <div class="form-group">
            <label for="name">Assigned To:</label>
                <select placeholder="Select Student" class="custom-select" id="inputGroupStudent">
                </select>
        </div>    
        <div class="form-group">
            <label for="name">Requestor:</label>
                <select placeholder="Select Requestor" class="custom-select" id="inputGroupRequestor">
                </select>
        </div>
        <div class="form-group">
            <label for="statusSelect">Status:</label>
            <select class="custom-select" id="statusSelect" name="status">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
        </div>
            <label for="notes">Task Comments:</label>
                <input placeholder="Enter Comments" id="inputGroupNotes" type="text" style="width: -webkit-fill-available; height: 100px;" />
            <br>
        <div style="display: flex; justify-content: center; align-tiems: center;">
            <button type="submit" class="btn btn-success" id="timeSubmit">Submit</button>
        </div>
    </td>
</tr>
{{!-- {{/if}} --}}
<tr>
    <th>Priority</th>
    <th>Due Date</th>
    <th>Project Name</th>
    <th>Task</th>
    <th>Assigned to</th>
    <th>Requestor</th>
    <th>Status</th>
    <th>Task Comments</th>
    <th>Duplicate</th>
    <th>Update</th>
    <th>Delete</th>
</tr>